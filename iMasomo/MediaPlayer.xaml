<Window x:Class="iMasomo.MediaPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaPlayer" Height="419.549" Width="586.466" Loaded="Window_Loaded">
    <Grid>
        <MediaElement x:Name="myMediaElement" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="578" MediaOpened="myMediaElement_MediaOpened"/>
        <Button x:Name="playBtn" Content="Play" HorizontalAlignment="Left" Margin="10,336,0,0" VerticalAlignment="Top" Width="75" Click="playBtn_Click"/>
        <Button x:Name="pauseBtn" Content="Pause" HorizontalAlignment="Left" Margin="85,336,0,0" VerticalAlignment="Top" Width="75" Click="pauseBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Margin="165,338,0,0" VerticalAlignment="Top" Width="75" Click="stopBtn_Click"/>
        <Slider x:Name="seek_slider" HorizontalAlignment="Left" Margin="10,363,0,0" VerticalAlignment="Top" Height="26" Width="558" Cursor="Hand" ValueChanged="seek_slider_ValueChanged"/>
        <Slider x:Name="vol_slider" HorizontalAlignment="Left" Margin="466,338,0,0" VerticalAlignment="Top" Width="102" SmallChange="1" Maximum="100" Value="100" Cursor="Hand" ValueChanged="vol_slider_ValueChanged"/>

    </Grid>
</Window>
